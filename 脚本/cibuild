set number 显示行数 Linux

#!/bin/bash
systemctl stop firewalld
setenforce 0

sed -i -e "net.ipv4.ip_forward=1" > /etc/sysctl.conf
set -i -e "net.ipv4.conf.default.rp_filter=0" >> /etc/sysctl.conf
set -i -e "net.ipv4.conf.all.rp_filter=0" >> /etc/sysctl.conf

sysctl -p
mkdir /opt/centos
touch /etc/yum.repos.d/local.repo
cat >>/etc/yum.repos.d/local.repo<<OK
[centos]
name=centos
baseurl=file:///opt/centos
gpgcheck=0
enabled=1
OK
mount /dev/sr0 /opt/centos
yum clean all
yum repolist

yum update -y 

yum install -y docker-io

sed -i "s/--selinux-enabled/--selinux-enabled=false/g" /etc/sysconfig/docker
systemctl start docker
systemctl enable docker

tee /etc/docker/daemon.json <<-'EOF'
{
  "registry-mirrors": ["https://mic0nknd.mirror.aliyuncs.com"]
}
EOF

systemctl daemon-reload
systemctl restart docker
docker info
